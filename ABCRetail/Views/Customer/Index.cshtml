@model IEnumerable<ABCRetail.Models.CustomerEntity>

<h2>Customer List</h2>
<a asp-action="Add">Add New Customer</a>
<table>
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>@customer.PhoneNumber</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@customer.RowKey">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@customer.RowKey">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>