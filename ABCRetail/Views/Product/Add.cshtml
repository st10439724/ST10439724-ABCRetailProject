@model ABCRetail.Models.ProductEntity

<h2>Add Product</h2>

<form asp-action="Add" method="post">
    <div>
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" required />
    </div>
    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description" required />
    </div>
    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" step="0.01" required />
    </div>
    <div>
        <label asp-for="QuantityInStock"></label>
        <input asp-for="QuantityInStock" type="number" required />
    </div>
    <div>
        <label asp-for="Category"></label>
        <input asp-for="Category" required />
    </div>
    <button type="submit">Add Product</button>
</form>