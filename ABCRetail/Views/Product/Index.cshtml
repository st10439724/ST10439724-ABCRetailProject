@model IEnumerable<ABCRetail.Models.ProductEntity>

<h2>Product List</h2>
<a asp-action="Add">Add New Product</a>
<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Quantity In Stock</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>@product.QuantityInStock</td>
                <td>@product.Category</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.RowKey">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@product.RowKey">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
